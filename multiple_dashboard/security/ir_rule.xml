<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="board_group_rule" model="ir.rule">
			<field name="name">board.group.rule</field>
			<field name="model_id" ref="multiple_dashboard.model_board_group"/>
			<field name="groups" eval="[(4, ref('base.group_user'))]"/>
			<field name="domain_force">[('owner_id', '=', user.id)]</field>
			<field name="perm_create" eval="0"/>
			<field name="perm_write" eval="1"/>
			<field name="perm_unlink" eval="1"/>
			<field name="perm_read" eval="1"/>
		</record>
		
		<record id="board_group_rule_shared" model="ir.rule">
			<field name="name">board.group.shared.rule</field>
			<field name="model_id" ref="multiple_dashboard.model_board_group"/>
			<field name="groups" eval="[(4, ref('base.group_user'))]"/>
			<field name="domain_force">[('user_ids', 'in', [user.id])]</field>
			<field name="perm_create" eval="0"/>
			<field name="perm_write" eval="0"/>
			<field name="perm_unlink" eval="0"/>
			<field name="perm_read" eval="1"/>
		</record>
	</data>
</odoo>